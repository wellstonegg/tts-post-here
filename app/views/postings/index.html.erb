<p id="notice"><%= notice %></p>

<h1>Postings</h1>

<%= link_to 'All Postings',postings_path(all: "true") %>
<%= link_to 'First Posting', postings_path(all: "false") %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @postings.each do |posting| %>
      <tr>
        <td><%= posting.title %></td>
        <td><%= posting.location %></td>
        <td><%= posting.content %></td>
        <td><%= link_to 'Show', posting %></td>
        <td><%= link_to 'Edit', edit_posting_path(posting) %></td>
        <td><%= link_to 'Destroy', posting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @postings %>
